<p id="notice"><%= notice %></p>

<h1>Route <%= @route.name %></h1>

<table>
  <tr><th>Name</th><td><%= @route.name %></td></tr>
  <tr><th>Persistent Id</th><td><%= @route.persistentid %></td></tr>
  <tr><th>Version</th><td><%= @route.version %></td></tr>
  <tr><th>Code</th><td><%= @route.route_code %></td></tr>
  <tr><th>Sort</th><td><%= @route.sort %></td></tr>
  <tr><th>Bounds</th><td><%= @route.bounds %></td></tr>
  <tr><th>Patterns</th><td>
    <% for pattern in @route.patterns do %>
        <%= link_to pattern.persistentid, master_pattern_path(@master, pattern) %>
    <% end %>
  </td></tr>
</table>
<table>
  <thead>
  <tr>
    <th>Journey</th>
      <th>Code</th>
      <th>Version</th>
      <th>Pattern</th>
  </tr>
  </thead>
  <tbody>
  <% for journey in @route.journeys do %>
  <tr>
    <td><%= link_to journey.name, master_journey_path(@master, journey) %></td>
    <td><%= journey.route_code %></td>
    <td><%= journey.version %></td>
    <td><%= link_to journey.pattern.persistentid, master_pattern_path(@master, journey.pattern) %></td>
  </tr>
  <% end %>
  </tbody>
</table>

